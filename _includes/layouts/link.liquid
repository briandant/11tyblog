---
layout: layouts/base
---
<main>
  <article aria-labelledby="post-title">
    <header>
      <h2 id="post-title" class="text-xl">{{ title }}</h2>
    </header>
    <section class="mb-4">
      <p class="text-xs text-slate-600">
        <time datetime="{{ page.date }}">{{ page.date }}</time>
      </p>
      <p class="text-xs text-slate-600">Author: {{ author }}</p>
    </section>
    {{ content }}
    <a
      class="visited:text-slate-600 underline"
      href="{{ externallink }}"
      target="_blank"
      rel="noopener noreferrer">{{ externalLink }}</a>
  </article>
</main>
